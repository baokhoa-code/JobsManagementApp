<Page x:Class="JobsManagementApp.View.Share.JobDetailPage"
      xmlns:local="clr-namespace:JobsManagementApp.View.Share"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF" 
      xmlns:vm="clr-namespace:JobsManagementApp.ViewModel"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1300"
      FontFamily="Roboto"
      Background='Beige'
      Title="JobDetailPageAdmin">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width='*'/>
            <ColumnDefinition Width='250'/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column='0'>

            <Grid.RowDefinitions>
                <RowDefinition Height='50'/>
                <RowDefinition Height='*'/>
            </Grid.RowDefinitions>

            <Grid Grid.Row='0'>
                <Label 
                Cursor="Hand"
                Height="45"
                Grid.Row="0"
                Width="45"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                x:Name="lbl" Padding="0,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="20,20,0,0">
                    <materialDesign:PackIcon 
                    Kind="ArrowLeft"
                    Height="45"
                    Width="45"
                    Foreground="#FF5F6388" 
                    HorizontalAlignment="Left"/>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding CancelCM}"
                                               CommandParameter="{Binding ElementName=lbl}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Label>
            </Grid>
            <Border 
                Grid.Row="1"
                CornerRadius="25"
                Background="white" 
                Margin="30,20,30,30" Grid.ColumnSpan="2">
                <Grid Grid.Row='1'>
                    <Grid.RowDefinitions>
                        <RowDefinition Height='40'/>
                        <RowDefinition Height='*'/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row='0'>
                        <Label 
                            Content="Job Detail" 
                            FontSize="25" 
                            Foreground="#232360" 
                            FontWeight="Bold"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Padding="0" Margin='0,10,0,0'/>

                    </Grid>
                    <Grid Grid.Row='1'>
                        <ScrollViewer>
                            <StackPanel Width='990'>
                                <Label 
                                    Content='ID - Name: J00001 Teach at CT101H'
                                    FontSize="16" 
                                    Foreground="#232360" 
                                    FontWeight="SemiBold" Margin='40,0,0,0'/>
                                <Separator Width='900' Margin='0,15,0,15'/>
                                <StackPanel Orientation='Horizontal' Height='50'>
                                    <StackPanel Orientation='Horizontal' Margin='30,0,0,0'>
                                        <Label 
                                            Content='Assignor' 
                                            Foreground="#232360" 
                                            FontWeight="SemiBold" 
                                            HorizontalContentAlignment='Center' 
                                            VerticalContentAlignment='Center' Width='80'/>
                                        <TextBox
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            Height="30"
                                            Padding='0'
                                            Width='150'/>
                                        <Button
                                            Style="{StaticResource MaterialDesignRaisedButton}" Padding='0' Height='26' Width='25' Background='#FF00BEFF' BorderBrush='#FF00BEFF' Margin='5,0,0,0'>
                                            <materialDesign:PackIcon Kind="FormatListBulleted" Foreground='White' />
                                        </Button>
                                    </StackPanel>
                                    <StackPanel Orientation='Horizontal' Margin='50,0,0,0'>
                                        <Label 
                                            Content='Category' 
                                            Foreground="#232360" 
                                            FontWeight="SemiBold" 
                                            VerticalContentAlignment='Center' Width='80'/>
                                        <TextBox
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            Height="30"
                                            Padding='0'
                                            Width='150'/>
                                        <Button
                                            Style="{StaticResource MaterialDesignRaisedButton}" Padding='0' Height='26' Width='25' Background='#FF00BEFF' BorderBrush='#FF00BEFF' Margin='5,0,0,0'>
                                            <materialDesign:PackIcon Kind="FormatListBulleted" Foreground='White' />
                                        </Button>
                                    </StackPanel>
                                    <StackPanel Orientation='Horizontal' Margin='40,0,0,0'>
                                        <Label 
                                            Content='Dependency' 
                                            Foreground="#232360" 
                                            FontWeight="SemiBold" 
                                            HorizontalContentAlignment='Center' 
                                            VerticalContentAlignment='Center' Width='80'/>
                                        <TextBox
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            Height="30"
                                            Padding='0'
                                            Width='150' Margin='10,0,0,0'/>
                                        <Button
                                            Style="{StaticResource MaterialDesignRaisedButton}" Padding='0' Height='26' Width='25' Background='#FF00BEFF' BorderBrush='#FF00BEFF' Margin='5,0,0,0'>
                                            <materialDesign:PackIcon Kind="FormatListBulleted" Foreground='White' />
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                                <Separator Width='900' Height='1' Margin='0,15,0,15'/>
                                <StackPanel Orientation='Horizontal' Height='50'>
                                    <StackPanel Orientation='Horizontal' Margin='30,0,0,0'>
                                        <Label 
                                            Content='Due Date' 
                                            Foreground="#232360" 
                                            FontWeight="SemiBold" 
                                            HorizontalContentAlignment='Center' 
                                            VerticalContentAlignment='Center' Width='80'/>
                                        <DatePicker
                                            Padding='10,0,10,0'
                                            Width="150"
                                            Height='30'
                                            materialDesign:HintAssist.Hint="Pick Date"
                                            Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                                    </StackPanel>
                                    <StackPanel Orientation='Horizontal' Margin='80,0,0,0'>
                                        <Label 
                                            Content='Start Date' 
                                            Foreground="#232360" 
                                            FontWeight="SemiBold" 
                                            VerticalContentAlignment='Center' Width='80'/>
                                        <DatePicker
                                            Padding='10,0,10,0'
                                            Width="150"
                                            Height='30'
                                            materialDesign:HintAssist.Hint="Pick Date"
                                            Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                                    </StackPanel>
                                    <StackPanel Orientation='Horizontal' Margin='80,0,0,0'>
                                        <Label 
                                            Content='End Date' 
                                            Foreground="#232360" 
                                            FontWeight="SemiBold" 
                                            VerticalContentAlignment='Center' Width='80'/>
                                        <DatePicker
                                            Padding='10,0,10,0'
                                            Width="150"
                                            Height='30'
                                            materialDesign:HintAssist.Hint="Pick Date"
                                            Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                                    </StackPanel>
                                </StackPanel>
                                <Separator Width='900' Height='1' Margin='0,15,0,15'/>
                                <StackPanel Orientation='Horizontal' Height='50'>
                                    <StackPanel Orientation='Horizontal' Margin='30,0,0,0'>
                                        <Label 
                                            Content='Require Time' 
                                            Foreground="#232360" 
                                            FontWeight="SemiBold" 
                                            HorizontalContentAlignment='Center' 
                                            VerticalContentAlignment='Center' Width='80' Padding='0,0,0,0' Margin='10,0,0,0'/>
                                        <TextBox
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            Height="30"
                                            Padding='0'
                                            Width='150'/>
                                    </StackPanel>
                                    <StackPanel Orientation='Horizontal' Margin='70,0,0,0'>
                                        <Label 
                                            Content='Progress' 
                                            Foreground="#232360" 
                                            FontWeight="SemiBold" 
                                            VerticalContentAlignment='Center' Width='80'/>
                                        <TextBox
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            Height="30"
                                            Padding='0'
                                            Width='150'/>
                                    </StackPanel>
                                    <StackPanel Orientation='Horizontal' Margin='80,0,0,0'>
                                        <Label 
                                            Content='Stage' 
                                            Foreground="#232360" 
                                            FontWeight="SemiBold" 
                                            VerticalContentAlignment='Center' Width='80'/>
                                        <TextBox
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            Height="30"
                                            Padding='0'
                                            Width='150'/>
                                    </StackPanel>
                                </StackPanel>
                                <Separator Width='900' Height='1' Margin='0,15,0,15'/>
                                <StackPanel Orientation='Horizontal'>
                                    <StackPanel Orientation='Vertical'>
                                        <Label 
                                            Content='Job Description' 
                                            Foreground="#232360" 
                                            FontWeight="SemiBold" 
                                            HorizontalContentAlignment='Center' 
                                            VerticalContentAlignment='Center' Width='90' Padding='0,0,0,0' HorizontalAlignment='Left' Margin='40,0,0,0'/>
                                        <TextBox
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            Height="170"
                                            TextWrapping="Wrap" Width='400' HorizontalAlignment='Left' Margin='40,5,0,0'
                                         />
                                    </StackPanel>
                                    <StackPanel Orientation='Vertical' HorizontalAlignment='Left' VerticalAlignment='Center' Margin='150,-90,0,11'>
                                        <Button
                                            Width="200" 
                                            Height="40" 
                                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                            materialDesign:ButtonAssist.CornerRadius="10"
                                            ToolTip="MaterialDesignRaisedDarkButton with Round Corners" 
                                            BorderBrush="#FF40CC6F" 
                                            Background="#FF40CC6F"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Content="Update" Padding="0,0,0,0" Grid.IsSharedSizeScope="True" Margin='0,110,0,0'/>
                                        <Button
                                            Width="200" 
                                            Height="40" 
                                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                            materialDesign:ButtonAssist.CornerRadius="10"
                                            ToolTip="MaterialDesignRaisedDarkButton with Round Corners" 
                                            BorderBrush="#FF40CC6F" 
                                            Background="#FF00BEFF"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Content="Show Jobs Assigned" Padding="0,0,0,0" Grid.IsSharedSizeScope="True" Margin='0,20,0,0'/>
                                        <Button
                                            Width="200" 
                                            Height="40" 
                                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                            materialDesign:ButtonAssist.CornerRadius="10"
                                            ToolTip="MaterialDesignRaisedDarkButton with Round Corners" 
                                            BorderBrush="#FFFE5555" 
                                            Background="#FFFE5555"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Content="Reports" Padding="0,0,0,0" Grid.IsSharedSizeScope="True" Margin='0,20,0,0'/>
                                    </StackPanel>
                                </StackPanel>

                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>


        </Grid>

        <Border 
            Grid.Column='1'
            Background="white">
            <Grid >
                <TreeView MinWidth="220" Margin='10,20,0,0' FontSize='14'>
                    <TreeViewItem Header="Fruit">
                        <TreeViewItem>
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Viewbox
                                        Width="16"
                                        Height="16">
                                        <Canvas
                                          Width="24"
                                          Height="24">
                                            <Path
                                                Data="M20,10C22,13 17,22 15,22C13,22 13,21 12,21C11,21 11,22 9,22C7,22 2,13 4,10C6,7 9,7 11,8V5C5.38,8.07 4.11,3.78 4.11,3.78C4.11,3.78 6.77,0.19 11,5V3H13V8C15,7 18,7 20,10Z"
                                                Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TreeViewItem}}, Path=Foreground}" />
                                        </Canvas>
                                    </Viewbox>
                                    <TextBlock
                                        Margin="8 0 0 0"
                                        Text="Apple" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem Header="Banana" />
                        <TreeViewItem Header="Grape">
                            <TextBlock>
                                <Run
                                  Text="Grapes for us" />
                            </TextBlock>
                        </TreeViewItem>
                        <TreeViewItem Header="Peach" />
                        <TreeViewItem Header="Pear" />
                        <TreeViewItem Header="Strawberry" />
                    </TreeViewItem>
                    <TreeViewItem
                        Header="OS"
                        IsExpanded="True">
                        <TreeViewItem Header="Amiga" />
                        <TreeViewItem>
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Viewbox
                                        Width="16"
                                        Height="16">
                                        <Canvas
                                            Width="24"
                                            Height="24">
                                            <Path
                                                Data="M15,5H14V4H15M10,5H9V4H10M15.53,2.16L16.84,0.85C17.03,0.66 17.03,0.34 16.84,0.14C16.64,-0.05 16.32,-0.05 16.13,0.14L14.65,1.62C13.85,1.23 12.95,1 12,1C11.04,1 10.14,1.23 9.34,1.63L7.85,0.14C7.66,-0.05 7.34,-0.05 7.15,0.14C6.95,0.34 6.95,0.66 7.15,0.85L8.46,2.16C6.97,3.26 6,5 6,7H18C18,5 17,3.25 15.53,2.16M20.5,8A1.5,1.5 0 0,0 19,9.5V16.5A1.5,1.5 0 0,0 20.5,18A1.5,1.5 0 0,0 22,16.5V9.5A1.5,1.5 0 0,0 20.5,8M3.5,8A1.5,1.5 0 0,0 2,9.5V16.5A1.5,1.5 0 0,0 3.5,18A1.5,1.5 0 0,0 5,16.5V9.5A1.5,1.5 0 0,0 3.5,8M6,18A1,1 0 0,0 7,19H8V22.5A1.5,1.5 0 0,0 9.5,24A1.5,1.5 0 0,0 11,22.5V19H13V22.5A1.5,1.5 0 0,0 14.5,24A1.5,1.5 0 0,0 16,22.5V19H17A1,1 0 0,0 18,18V8H6V18Z"
                                                Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TreeViewItem}}, Path=Foreground}" />
                                        </Canvas>
                                    </Viewbox>
                                    <TextBlock
                                        Margin="8 0 0 0"
                                        Text="Android" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem Header="iOS" />
                        <TreeViewItem>
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Viewbox
                                        Width="16"
                                        Height="16">
                                        <Canvas
                                            Width="24"
                                            Height="24">
                                            <Path
                                                Data="M13.18,14.5C12.53,15.26 11.47,15.26 10.82,14.5L7.44,10.5C7.16,11.28 7,12.12 7,13C7,14.67 7.57,16.18 8.5,17.27C10,17.37 11.29,17.96 11.78,19C11.85,19 11.93,19 12.22,19C12.71,18 13.95,17.44 15.46,17.33C16.41,16.24 17,14.7 17,13C17,12.12 16.84,11.28 16.56,10.5L13.18,14.5M20,20.75C20,21.3 19.3,22 18.75,22H13.25C12.7,22 12,21.3 12,20.75C12,21.3 11.3,22 10.75,22H5.25C4.7,22 4,21.3 4,20.75C4,19.45 4.94,18.31 6.3,17.65C5.5,16.34 5,14.73 5,13C4,15 2.7,15.56 2.09,15C1.5,14.44 1.79,12.83 3.1,11.41C3.84,10.6 5,9.62 5.81,9.25C6.13,8.56 6.54,7.93 7,7.38V7A5,5 0 0,1 12,2A5,5 0 0,1 17,7V7.38C17.46,7.93 17.87,8.56 18.19,9.25C19,9.62 20.16,10.6 20.9,11.41C22.21,12.83 22.5,14.44 21.91,15C21.3,15.56 20,15 19,13C19,14.75 18.5,16.37 17.67,17.69C19.05,18.33 20,19.44 20,20.75M9.88,9C9.46,9.5 9.46,10.27 9.88,10.75L11.13,12.25C11.54,12.73 12.21,12.73 12.63,12.25L13.88,10.75C14.29,10.27 14.29,9.5 13.88,9H9.88M10,5.25C9.45,5.25 9,5.9 9,7C9,8.1 9.45,8.75 10,8.75C10.55,8.75 11,8.1 11,7C11,5.9 10.55,5.25 10,5.25M14,5.25C13.45,5.25 13,5.9 13,7C13,8.1 13.45,8.75 14,8.75C14.55,8.75 15,8.1 15,7C15,5.9 14.55,5.25 14,5.25Z"
                                                Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TreeViewItem}}, Path=Foreground}" />
                                        </Canvas>
                                    </Viewbox>
                                    <TextBlock
                                        Margin="8 0 0 0"
                                        Text="Linux" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem>
                            <TreeViewItem.Header>
                                <StackPanel
                                    Orientation="Horizontal">
                                    <Viewbox
                                        Width="16"
                                        Height="16">
                                        <Canvas
                                            Width="24"
                                            Height="24">
                                            <Path
                                                Data="M3,12V6.75L9,5.43V11.91L3,12M20,3V11.75L10,11.9V5.21L20,3M3,13L9,13.09V19.9L3,18.75V13M20,13.25V22L10,20.09V13.1L20,13.25Z"
                                                Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TreeViewItem}}, Path=Foreground}" />
                                        </Canvas>
                                    </Viewbox>
                                    <TextBlock Margin="8 0 0 0">
                                        Windows
                                    </TextBlock>
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem Header="Empty" />
                </TreeView>
            </Grid>
        </Border>


    </Grid>

</Page>
