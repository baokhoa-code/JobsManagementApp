                        </Grid>
                        <Grid Grid.Row="1">
                            <Border 
                                CornerRadius="15"
                                Background="#5051F9"
                                BorderBrush="#5051F9"
                                Height="50"
                                Width="160">
                                <Grid
                                    Height="50"
                                    Width="160" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                                    <materialDesign:PackIcon
                                        Kind="ViewDashboard" 
                                        Height="35" 
                                        Width="35"
                                        VerticalAlignment="Center" 
                                        Margin="10,0,0,0"
                                        Padding="0"
                                        Foreground="white"/>
                                    <Label 
                                        Content="Dash Board" 
                                        FontSize="16" 
                                        Foreground="white" 
                                        Width="100" Height="30" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center" 
                                        Margin="0,2,-40,0"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Border 
                                CornerRadius="15"
                                Background="#5051F9"
                                BorderBrush="#5051F9"
                                Height="50"
                                Width="160"
                                Visibility="Hidden">
                                <Grid
                                    Height="50"
                                    Width="160" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                                    <materialDesign:PackIcon
                                        Kind="AccountGroup" 
                                        Height="35" 
                                        Width="35"
                                        VerticalAlignment="Center" 
                                        Margin="10,0,0,0"
                                        Padding="0"
                                        Foreground="white"/>
                                    <Label 
                                        Content="Staffs" 
                                        FontSize="16" 
                                        Foreground="white" 
                                        Width="100" Height="30" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center" 
                                        Margin="0,2,-40,0"/>
                                </Grid>
                            </Border>
                            <Border 
                                CornerRadius="15"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Height="50"
                                Width="160"
                                Visibility="Visible"
                                >
                                <Button 
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    FontSize="16"
                                    Name="btn_Confirm2"
                                    
                                    Height="50"
                                    Width="160"
                                    Padding="0">
                                    <Grid
                                        Height="50"
                                        Width="160" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center">
                                        <materialDesign:PackIcon
                                            Kind="AccountGroup" 
                                            Height="35" 
                                            Width="35"
                                            VerticalAlignment="Center" 
                                            Margin="10,0,0,0"
                                            Padding="0" 
                                            Foreground="#FF5F6388"/>
                                        <Label 
                                            Content="Staffs" 
                                            FontSize="16" 
                                            Foreground="#FF5F6388" 
                                            Width="100" Height="30" 
                                            VerticalAlignment="Center" Margin="0,2,-40,0" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Button>
                            </Border>
                        </Grid>
                        <Grid Grid.Row="3">
                            <Border 
                                CornerRadius="15"
                                Background="#5051F9"
                                BorderBrush="#5051F9"
                                Height="50"
                                Width="160"
                                Visibility="Hidden">
                                <Grid
                                    Height="50"
                                    Width="160" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                                    <materialDesign:PackIcon
                                        Kind="BriefcaseCheck" 
                                        Height="35" 
                                        Width="35"
                                        VerticalAlignment="Center" 
                                        Margin="10,0,0,0"
                                        Padding="0"
                                        Foreground="white"/>
                                    <Label 
                                        Content="Jobs" 
                                        FontSize="16" 
                                        Foreground="white" 
                                        Width="100" Height="30" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center" 
                                        Margin="0,2,-40,0"/>
